<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="route"
            type="com.capstone.traffic.ui.home.HomeViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            app:cardElevation="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="23dp">
                    <ImageView
                        android:id="@+id/startStationImageView"
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/centerStationImageView"
                        android:layout_gravity="center"
                        android:background="@drawable/background_station_name_out"
                        android:layout_width="160dp"
                        android:layout_height="60dp">
                    </ImageView>
                    <ImageView
                        android:layout_gravity="center"
                        android:background="@drawable/background_station_name_in"
                        android:layout_width="145dp"
                        android:layout_height="45dp">
                    </ImageView>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginEnd="2dp"
                            android:id="@+id/lineTV"
                            tools:text="1"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@drawable/shape_circle"
                            android:layout_gravity="center"
                            android:layout_width="27dp"
                            android:layout_height="27dp"/>
                        <TextView
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="호선"
                            android:textSize="24sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="23dp">
                    <ImageView
                        android:id="@+id/endStationImageView"
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/container"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subway Lines"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line1Btn"
                    android:onClick="@{()->route.line1()}"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle1"
                    android:text="@string/n1"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line2Btn"
                    android:onClick="@{()->route.line2()}"
                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle2"
                    android:text="@string/n2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line3Btn"
                    android:onClick="@{()->route.line3()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle3"
                    android:text="@string/n3" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line4Btn"
                    android:onClick="@{()->route.line4()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle4"
                    android:text="@string/n4" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line5Btn"
                    android:onClick="@{()->route.line5()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle5"
                    android:text="@string/n5" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line6Btn"
                    android:onClick="@{()->route.line6()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle6"
                    android:text="@string/n6" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line7Btn"
                    android:onClick="@{()->route.line7()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle7"
                    android:text="@string/n7" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line8Btn"
                    android:onClick="@{()->route.line8()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle8"
                    android:text="@string/n8" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line9Btn"
                    android:onClick="@{()->route.line9()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle9"
                    android:text="@string/n9" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</layout>