<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="30sp"
    android:layout_marginEnd="30sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/EstartSubway"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/metro_do3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/EcenterSubway"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/metro_do3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/EendSubway"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/metro_do3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line1"
                android:layout_width="3sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@color/hs3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/circle1"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/icon_arrow_circle_bottom" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line2"
                android:layout_width="3sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@color/hs3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line3"
                android:layout_width="3sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@color/hs3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/circle2"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@drawable/icon_arrow_circle_top" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line4"
                android:layout_width="3sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@color/hs3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/EreverseStartSubway"
                android:layout_width="10sp"
                android:layout_height="30sp"
                android:background="@drawable/icon_subway_top" />

            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/EreverseCenterSubway"
                android:layout_width="10sp"
                android:layout_height="30sp"
                android:background="@drawable/icon_subway_top" />

            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/EreverseEndSubway"
                android:layout_width="10sp"
                android:layout_height="30sp"
                android:background="@drawable/icon_subway_top" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/startSubway"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/metro_do3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/centerSubway"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/metro_do3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/endSubway"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/metro_do3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line5"
                android:layout_width="3sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@color/hs3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/circle3"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/icon_arrow_circle_bottom" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line6"
                android:layout_width="3sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@color/hs3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line7"
                android:layout_width="3sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@color/hs3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/circle4"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@drawable/icon_arrow_circle_top" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line8"
                android:layout_width="3sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@color/hs3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/reverseStartSubway"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/metro_up3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/reverseCenterSubway"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/metro_up3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="invisible"
                android:id="@+id/reverseEndSubway"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:background="@drawable/metro_up3" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/stationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />
</LinearLayout>